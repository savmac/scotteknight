<div class='container col-md-10'>
  <h1>Edit blog post</h1>
    <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: '17' %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit class: 'btn btn-default' %>
    </div>
    <% end %>
</div>
